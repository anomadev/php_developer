{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1 class="d-flex align-items-center justify-content-between">
            Categories Home
            <a href="{{ path('category_create') }}" class="btn btn-dark btn-sm">Crear Categoria</a>
        </h1>

        <table class="table table-striped">
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_edit', { id: category.id }) }}">editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
