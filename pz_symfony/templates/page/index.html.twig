{% extends 'base.html.twig' %}

{% block title %}Hello PageController{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1 class="d-flex align-items-center justify-content-between">
            Posts Home
            <a href="{{ path('post_create') }}" class="btn btn-dark btn-sm">Crear Post</a>
        </h1>

        <table class="table table-striped">
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.title }}</td>
                    <td>
                        <a href="{{ path('post_edit', { id: post.id }) }}">editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}